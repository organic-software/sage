    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Deno",
            "request": "launch",
            "type": "pwa-node",
            "program": "mod.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        },
        {
            "name": "Watch Deno",
            "type": "pwa-node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "denon",
            "runtimeArgs": [
                "check"
            ]
        },
        {
            "name": "Watch Deno (Fast)",
            "type": "pwa-node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "denon",
            "runtimeArgs": [
                "dev"
            ]
        }
    ]
}